<title>Dashboard - inGallery</title>
<%- layout('layout/userBoilerplate') %>
<div class="bodyContainer">
  <%-include('../partials/sideBar') %>
  <form
    action="/user/upload"
    method="post"
    enctype="multipart/form-data"
    id="uploadForm"
  >
    <h1 id="uploadHeader">Upload a Image</h1>
    <%- include('../partials/err') %>
    <div class="container2">
      <div class="first">
        <div class="input" id="imgInput">
          <div id="imgPreview"></div>
          <label for="img"></label>
          <p>
            <input
              type="file"
              name="img"
              id="img"
              accept="image/*"
              required
              class="previewInput"
            />
          </p>
        </div>
      </div>
      <div class="second">
        <div class="input">
          <label for="category">Category</label>
          <p>
            <select name="category" id="cnategory" required>
              <option value="wallpaper">Wallpaper</option>
              <option value="backgound">Background</option>
              <option value="nature">Nature</option>
              <option value="people">People</option>
              <option value="animal">Animal</option>
              <option value="technology">Technology</option>
              <option value="others">Others</option>
            </select>
          </p>

          <div class="input">
            <label for="description">Description</label>
            <p>
              <textarea
                required
                name="description"
                id="description"
                placeholder="Write a short note about the photo you want to upload"
              ></textarea>
            </p>
          </div>
          <p id="noteTxt">
            <span id="note">*</span>
            make sure to fill in meaningful informations, for these informations
            will be used when publishing this image.
            <span id="note">*</span>
          </p>
          <button type="submit">
            <i class="fa-solid fa-file-arrow-up"></i> Upload
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
